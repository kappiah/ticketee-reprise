<% content_for :actions do %>
  <ul>
    <li>
      <%= link_to "Edit User", [:edit, :admin, @user], class: "button safe"%>
    </li>
    <li>
      <%= link_to "Archive User", [:archive, :admin, @user],
        method: :patch, class: "button danger" %>
    </li>
  </ul>
<% end %>

<header>
  <h1>
    <%= @user %>
  </h1>
</header>

<% if @user.roles.any? %>
  <ul>
    <% @user.roles.each do |role| %>
      <li>
        <%= role.role.titleize %>: <%= role.project.name %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>This user has no roles.</p>
<% end %>
